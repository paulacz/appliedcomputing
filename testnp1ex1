#include <stdio.h>
#define LINHA 3
#define COLUNA 4
int main()
{
    int num[3][4], i, j;
    for(i = 0;i<LINHA;i++){
        for(j=0;j<COLUNA;j++){
            scanf("%d", &num[i][j]);
        }
    }
    int qtdPares = 0;
    int somaTudo = 0;
    int somaImpares = 0;
    for(i = 0;i<LINHA;i++){
        for(j=0;j<COLUNA;j++){
            if((num[i][j] % 2) == 0){
                qtdPares++;
            }
            else{
                somaImpares += num[i][j];
            }
            somaTudo += num[i][j];
        }
    }    
    printf("Quantidade pares: %d\n", qtdPares);
    printf("Soma impares: %d\n", somaImpares);
    printf("MÃ©dia: %d\n", somaTudo/12);        
    
}
